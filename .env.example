# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Redis Configuration
# Default Redis host for docker-compose
REDIS_HOST=redis
# Default Redis port
REDIS_PORT=6379

# You can override these to connect to an external Redis instance, for example:
# REDIS_HOST=192.168.1.100
# REDIS_PORT=6379

# Letta Configuration
# Letta AI model (default: gpt-4)
LETTA_MODEL=gpt-4
# Letta API key (reuse OpenAI key by default)
LETTA_API_KEY=${OPENAI_API_KEY}

# Letta Bridge Service Configuration
# Letta API endpoint (internal Docker network)
LETTA_API_URL=http://letta:8283
# Bridge service timeout settings
LETTA_TIMEOUT=30
LETTA_RETRY_ATTEMPTS=3
